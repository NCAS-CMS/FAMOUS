# Overridable pathnames
MY_UMHOME=$DATA_DIR
TMPDIR=${TMPDIR:-${DATA_DIR}/tmp}
MY_OUTPUT=${MY_OUTPUT:-${MY_UMHOME}/umui_out}
UMUI_RUNS=${UMUI_RUNS:-${HOME}}
MPIF90_UM=${MPIF90_UM:-mpif90}

# Pathnames (should remain unchanged)
UM_HOME=$HOME
#UMDIR=/home/simon/data/rdata/um_famous
UMTEST=$HOME

# Variables (may be altered for each user)
NPROC=${NPROC:-6}

# Variables (should remain unchanged)
UMMACHINE=OTHER
BUILDHOST=OTHER
SCRDEFS=MPP,OTHER
PROGDEFS=LINUX,MPPRECON,MPP,FRL8,C_LOW_U
UM_AWK=awk
UM_SED=sed
UM_GREP=grep

#MPI
if [[ $MPI_MODULES != "Y" ]]
then
  MPI_DIR=${MPI_DIR:-${UMDIR}/mpich3.2}
  PATH=$MPI_DIR/bin:$PATH
fi
# Paths
PATH=$UMDIR/bin:$PATH:.:$UMDIR/vn4.5/utils
FPATH=$UMDIR/vn4.5/scripts/functions:$FPATH

# Exports
export MY_UMHOME TMPDIR MY_OUTPUT UM_HOME UMDIR UMTEST
export NPROC UMMACHINE BUILDHOST SCRDEFS PROGDEFS
export UM_AWK UM_SED UM_GREP
export MPIF90
export PATH FPATH

# Create directories if they don't exist
[ ! -d $MY_UMHOME ] && mkdir -p $MY_UMHOME
[ ! -d $TMPDIR ] && mkdir -p $TMPDIR
[ ! -d $MY_OUTPUT ] && mkdir -p $MY_OUTPUT

